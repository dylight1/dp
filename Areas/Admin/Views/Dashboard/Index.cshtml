@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <h1 class="mt-4">Панель администратора</h1>
    <p class="lead">Добро пожаловать в панель администратора</p>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h2>@ViewBag.ProductCount</h2>
                    Products
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Посмотреть детали</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <h2>@ViewBag.OrderCount</h2>
                    Orders
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">Посмотреть детали</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h2>@ViewBag.UserCount</h2>
                    Users
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Посмотреть детали</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Быстрые действия
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus me-2"></i> Добавить новый товар
                        </a>
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-list me-2"></i> Управление заказами
                        </a>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-users me-2"></i> Управление пользователями
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 