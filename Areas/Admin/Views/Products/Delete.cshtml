@model Spode.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-fluid">
    <h1 class="mt-4">Delete Product</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <strong>Warning!</strong> Are you sure you want to delete this product? This action cannot be undone.
            </div>
            
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-product-image.png" : Model.ImageUrl)" 
                         alt="@Model.Name" class="img-fluid mb-3" style="max-height: 200px;" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                        
                        <dt class="col-sm-3">Stock</dt>
                        <dd class="col-sm-9">@Model.StockQuantity</dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 